{
  "private": true,
  "name": "@robovalidators/tbw-api",
  "description": "True Block Weight API server, utilizing the TBW Core plugin",
  "version": "0.1.0",
  "contributors": [
    "Bindie Dev <hello@bindie.io>"
  ],
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2 start dist/main.js --name tbw-api",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pm2:list": "pm2 list",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart tbw-api",
    "pm2:delete": "pm2 delete tbw-api",
    "pm2:stop": "pm2 stop tbw-api"
  },
  "dependencies": {
    "@arkecosystem/crypto": "2.7.26",
    "@nestjs/common": "7.4.4",
    "@nestjs/config": "0.6.3",
    "@nestjs/core": "7.4.4",
    "@nestjs/platform-express": "7.4.4",
    "@nestjs/schedule": "0.4.3",
    "@nestjs/terminus": "7.2.0",
    "@types/lodash": "4.14.176",
    "axios": "0.20.0",
    "axios-cache-adapter": "2.7.3",
    "bignumber.js": "9.0.1",
    "eslint-plugin-prettier": "3.4.1",
    "firebase": "7.24.0",
    "firebase-admin": "9.12.0",
    "fireorm": "0.17.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.4.4",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.33",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.25.3",
    "jest": "26.6.3",
    "pm2": "5.4.2",
    "prettier": "2.3.0",
    "supertest": "5.0.0",
    "ts-jest": "26.5.6",
    "ts-loader": "8.3.0",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.11.0",
    "typescript": "3.9.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
